[Unit]
Description=bearded-wookie agent
After=network.target

[Service]
Type=simple
Restart=always
EnvironmentFile=-/etc/bearded-wookie/default/agent.env
Environment=SHELL=/bin/bash
# enable verbose logging. enables all of the BEARDED_WOOKIE_LOGS_ switches.
#Environment=BEARDED_WOOKIE_LOGS_VERBOSE=1
# enable verbose logging for the gossip service.
#Environment=BEARDED_WOOKIE_LOGS_GOSSIP=1
# enable verbose logging for the raft service.
#Environment=BEARDED_WOOKIE_LOGS_RAFT=1
# enable verbose logging for grpc
#Environment=BEARDED_WOOKIE_LOGS_GRPC=1
ExecStart=/usr/local/bin/bw agent --cluster-dns-enable

[Install]
WantedBy=default.target
