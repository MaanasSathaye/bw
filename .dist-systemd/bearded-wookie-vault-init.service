[Unit]
Description=bearded-wookie agent credentials initialization from vault.
After=network.target
Before=bearded-wookie.service

[Service]
Type=oneshot
EnvironmentFile=-/etc/bearded-wookie/default/agent.env
ExecStart=/usr/local/bin/bwcreds vault --agent default ${BEARDED_WOOKIE_VAULT_PKI_ENDPOINT} ${BEARDED_WOOKIE_SERVER_NAME}

[Install]
WantedBy=bearded-wookie.service
